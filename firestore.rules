rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Movies: anyone can read, nobody can write from client
    match /movies/{movieId} {
      allow read: if true;
      allow write: if false; // Only via admin/seed script

      // Ratings: authenticated users can read/write their own rating
      match /ratings/{userId} {
        allow read: if true;
        allow write: if request.auth != null && request.auth.uid == userId;
      }

      // Comments: anyone can read, authenticated can write
      match /comments/{commentId} {
        allow read: if true;
        allow create: if request.auth != null
          && request.resource.data.userId == request.auth.uid
          && request.resource.data.text is string
          && request.resource.data.text.size() >= 3
          && request.resource.data.text.size() <= 500;
        allow delete: if request.auth != null
          && resource.data.userId == request.auth.uid;
      }
    }

    // Users: authenticated users can read/write their own data
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;

      match /favorites/{movieId} {
        allow read, write: if request.auth != null && request.auth.uid == userId;
      }
    }
  }
}
